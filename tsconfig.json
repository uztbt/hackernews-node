{
    "compilerOptions": {
      "baseUrl": ".",
      "outDir": "dist/",
      "target": "es5",
      "lib": [
        "es2018",
        "esnext"
      ],
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
    },
    "include": [
      "src"
    ]
  }
  